{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "."
  },
  "include": [
    "src",
    "layouts/MainLayout.tsx",
    "layouts/Navigation/NetflixNavigationLink.tsx",
    "pages/HomePage.tsx",
    "pages/GenreExplore.tsx",
    "pages/MyList.tsx",
    "pages/SearchPage.tsx",
    "pages/WatchPage.tsx",
    "hooks/useIntersectionObserver.ts",
    "hooks/useMyList.ts",
    "hooks/useOutsideClick.tsx",
    "hooks/useWindowSize.ts",
    "hooks/useOffSetTop.ts",
    "hooks/MyListContext.tsx",
    "types/Movie.ts",
    "types/Genre.ts",
    "types/Common.ts",
    "constants/index.ts",
    "utils/common.ts",
    "utils/CustomClassNameSetup.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
